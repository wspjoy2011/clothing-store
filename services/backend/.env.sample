# ──────────────── PostgreSQL Database Configuration ────────────────
# Name of the PostgreSQL database to connect to
POSTGRES_DB=<database_name>
# Port on which the PostgreSQL server is listening
POSTGRES_DB_PORT=<database_port>
# Username for authenticating with PostgreSQL
POSTGRES_USER=<database_user>
# Password for the PostgreSQL user
POSTGRES_PASSWORD=<database_password>
# Hostname or Docker service name of the PostgreSQL container
POSTGRES_HOST=<database_host_or_service_name>

# ──────────────── pgAdmin Configuration ────────────────
# Email address for logging into pgAdmin
PGADMIN_DEFAULT_EMAIL=<pgadmin_email>
# Password for the pgAdmin user
PGADMIN_DEFAULT_PASSWORD=<pgadmin_password>

# ──────────────── Dataset Location ────────────────
# Absolute path to the folder containing your CSV data files
DATASET_DIR=<absolute_path_to_dataset_directory>

# ──────────────── Logging Configuration ────────────────
# Directory where application log files should be written
LOG_DIR=<absolute_path_to_log_directory>

# ──────────────── CORS Configuration ────────────────
# Frontend URL for CORS settings (comma-separated list if multiple)
FRONTEND_CORS_ORIGINS=http://localhost:5000

# ──────────────── Elasticsearch Configuration ────────────────
# Hostname or Docker service name of the Elasticsearch container
ELASTICSEARCH_HOST=<elasticsearch_host_or_service_name>
# Port on which the Elasticsearch server is listening
ELASTICSEARCH_PORT=<elasticsearch_port>
# Username for authenticating with Elasticsearch
ELASTICSEARCH_USER=<elasticsearch_username>
# Password for the Elasticsearch user
ELASTICSEARCH_PASSWORD=<elasticsearch_password>
# Protocol scheme for Elasticsearch connections (http/https)
ELASTICSEARCH_SCHEME=<http_or_https>
# Name of the main products index for search and autocomplete
ELASTICSEARCH_PRODUCTS_INDEX=<products_index_name>

# ──────────────── Email Configuration ────────────────
# Hostname or Docker service name of the SMTP server (MailHog for development)
EMAIL_HOST=<smtp_host_or_service_name>
# Port on which the SMTP server is listening
EMAIL_PORT=<smtp_port>
# Username for authenticating with the SMTP server
EMAIL_HOST_USER=<smtp_username>
# Password for the SMTP server authentication
EMAIL_HOST_PASSWORD=<smtp_password>
# Whether to use TLS encryption for SMTP connections (True/False)
EMAIL_USE_TLS=<true_or_false>
# Whether to use SSL encryption for SMTP connections (True/False)
EMAIL_USE_SSL=<true_or_false>

# ──────────────── JWT Token Configuration ────────────────
# Secret key for signing access tokens (keep this secure and unique)
JWT_SECRET_KEY_ACCESS=<your_secret_key_for_access_tokens>
# Secret key for signing refresh tokens (keep this secure and unique)
JWT_SECRET_KEY_REFRESH=<your_secret_key_for_refresh_tokens>
# Algorithm used for JWT token signing (HS256, RS256, etc.)
JWT_SIGNING_ALGORITHM=HS256
# Access token expiration time in minutes
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# Refresh token expiration time in minutes (10080 = 7 days)
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080

# ──────────────── Google OAuth2 Configuration ────────────────
# Google OAuth2 Client ID from Google Cloud Console
GOOGLE_CLIENT_ID=<your_google_client_id>
# Google OAuth2 Client Secret from Google Cloud Console
GOOGLE_CLIENT_SECRET=<your_google_client_secret>

# ──────────────── Facebook OAuth2 Configuration ────────────────
# Facebook App ID from Facebook Developers Console
FACEBOOK_CLIENT_ID=<your_facebook_app_id>
# Facebook App Secret from Facebook Developers Console
FACEBOOK_CLIENT_SECRET=<your_facebook_app_secret>
